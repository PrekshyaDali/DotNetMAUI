    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MVVM Demo">
    <VerticalStackLayout VerticalOptions="End">
        <Label
            Margin="10"
            HorizontalOptions="Center"
            Text="Prekshya"
            TextColor="Red" />
        <Button
            x:Name="prekshyaButton1"
            Margin="10"
            Clicked="OnButton1Clicked"
            Text="Click Me1"/>
        <Button
            x:Name="prekshyaButton2"
            Margin="10"
            Clicked="OnButton2Clicked"
            Text="Click Me2" />
        <Button
            x:Name="prekshyaButton3"
            Margin="10"
            Clicked="OnButton3Clicked"
            Text="Click Me3" />
    </VerticalStackLayout>
</ContentPage>
