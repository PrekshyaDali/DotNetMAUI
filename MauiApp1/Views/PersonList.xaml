<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.Pages.PersonList"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PersonList">
    <FlexLayout Direction="Column">
        <Frame
            Margin="5"
            Padding="5"
            FlexLayout.Basis="600">
            <VerticalStackLayout Padding="10">
                <Entry Placeholder="Age" Text=" " />
                <Entry Placeholder="Name" Text=" " />
                <HorizontalStackLayout>
                    <Label Margin="12" Text="Part Timer" />
                    <Switch IsToggled="False" />
                </HorizontalStackLayout>
                <Button Margin="10" Text="Add Persons" />

            </VerticalStackLayout>
        </Frame>

        <ListView FlexLayout.Grow="1">
            <ListView.Header>
                <VerticalStackLayout BackgroundColor="HotPink" Padding="5">
                    <Label HorizontalOptions="Center" Text="Newly added Persons"></Label>
                </VerticalStackLayout>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="" Detail=""></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </FlexLayout>
</ContentPage>