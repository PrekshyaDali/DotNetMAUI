<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.Person"
             Title="Prekshya Information"
             xmlns:vm ="clr-namespace:MauiApp1.Models.ViewModels"
             x:DataType="vm:PersonViewModel2">
    <TableView Intent="Data">
        <TableRoot>
            <TableSection Title='Prekshya Information'>
                <TextCell Text="Name" Detail="{Binding Name}"></TextCell>
                <TextCell Text="Age" Detail="{Binding Age}"></TextCell>
                <EntryCell Label="Name" Text="{Binding Name}"></EntryCell>
                <TextCell Text="Email" Detail="{Binding Email}"></TextCell>
                <TextCell Text="IsTrainee" Detail="{Binding IsTrainee}"></TextCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>