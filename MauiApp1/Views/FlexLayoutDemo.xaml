<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.Pages.FlexLayoutDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Flex Layout Demo">
    <!--  stretch is the default value for align items  -->
    <FlexLayout AlignContent="Center" Direction="Column">
        <!--<Button Text="Flex Button1" FlexLayout.Grow="1" BackgroundColor="LightBlue" />
        <Button Text="Flex Button2" FlexLayout.Basis="Auto" FlexLayout.Order="-1"/>-->
        <Label
            Padding="20"
            BackgroundColor="DarkRed"
            FontAttributes="Bold"
            FontSize="20"
            HorizontalTextAlignment="Center"
            Text="Welcome to Dotnet MAUI Prekshya"
            TextColor="White" />

        <FlexLayout Direction="Row" FlexLayout.Grow="1">
            <VerticalStackLayout BackgroundColor="MediumPurple" FlexLayout.Basis="50" />
            <VerticalStackLayout BackgroundColor="Aqua" FlexLayout.Grow="1" />
            <VerticalStackLayout BackgroundColor="MediumPurple" FlexLayout.Basis="50" />
        </FlexLayout>
        <Label
            Padding="10"
            BackgroundColor="DarkBlue"
            FontAttributes="Bold"
            FontSize="20"
            HorizontalTextAlignment="Center"
            Text="Footer"
            TextColor="white" />
    </FlexLayout>
</ContentPage>
    